<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grosu_Olesea_Lab7.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="10" Padding="10">
        <HorizontalStackLayout Spacing="10">
            <Image 
                Source="shop_list.png"
                SemanticProperties.Description="Shopping List Icon"
                HeightRequest="64" />
            <Label 
                Text="My Shopping Lists" 
                FontSize="22" 
                FontAttributes="Bold" 
                VerticalOptions="Center" />
            <Label 
                Text="v1.0" 
                FontSize="18" 
                VerticalOptions="Center" />
        </HorizontalStackLayout>

        <Label 
            Text="This app will help you to manage your shopping lists." 
            FontSize="16" />
    </VerticalStackLayout>
</ContentPage>
