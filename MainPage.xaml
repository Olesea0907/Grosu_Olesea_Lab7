<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grosu_Olesea_Lab7.MainPage"
             Title="About Me">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            VerticalOptions="Center">
            <Image
                Source="personal.png"
                HeightRequest="270"
                Aspect="AspectFill"
                SemanticProperties.Description="Profile image"
                HorizontalOptions="Fill" />

            <Label
                Text="Bună, sunt Olesea Grosu!"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="#4735b7"
                HorizontalOptions="Center" />

            <Label
                Text="Am creat această aplicație în cadrul unui laborator în anul 3 la IE ID."
                FontSize="18"
                TextColor="#3e3768"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Click 3 times"
                BackgroundColor="#4735b7"
                TextColor="White"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
