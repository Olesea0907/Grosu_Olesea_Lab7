<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Grosu_Olesea_Lab7.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Grosu_Olesea_Lab7"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="#4a2ac4"
    Shell.ForegroundColor="White"
    Shell.TitleColor="White"
    Shell.TabBarBackgroundColor="White"
    Shell.TabBarTitleColor="#4a2ac4"
    Shell.TabBarUnselectedColor="Gray">

    <TabBar>
        <!-- Pagina principală -->
        <ShellContent
            Title="Welcome"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <!-- Pagina de despre aplicație -->
        <ShellContent
            Title="About app"
            ContentTemplate="{DataTemplate local:AboutPage}"
            Route="AboutPage" />

        <!-- Lista de cumpărături -->
        <ShellContent
            Title="My Shopping Lists"
            ContentTemplate="{DataTemplate local:ListEntryPage}"
            Route="ListEntryPage" />

        <!-- Pagina pentru Magazine -->
        <ShellContent
            Title="My Shops"
            ContentTemplate="{DataTemplate local:ShopEntryPage}"
            Route="ShopEntryPage" />
    </TabBar>
</Shell>
